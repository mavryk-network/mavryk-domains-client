{
    "private": true,
    "scripts": {
        "lerna": "lerna",
        "build": "lerna run build",
        "test": "lerna run test",
        "watch": "lerna run --parallel watch",
        "cut-release": "lerna version --sign-git-commit --force-publish",
        "cut-prerelease": "yarn cut-release --conventional-prerelease",
        "publish": "lerna publish from-git",
        "commit": "git-cz",
        "lint": "eslint --ext .ts ./",
        "prepare": "yarn build",
        "version": "yarn",
        "docs": "typedoc --options .typedoc.js --plugin typedoc-plugin-lerna-packages",
        "update-contracts": "ts-node --script-mode ./scripts/import-addresses.ts",
        "copy-to-app": "ts-node --script-mode ./scripts/copy-to-local-app.ts",
        "integration-test": "yarn workspace integration-tests integration-test"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.4",
        "@commitlint/config-conventional": "^18.4.4",
        "@commitlint/config-lerna-scopes": "^18.4.4",
        "@types/fs-extra": "^9.0.2",
        "@types/jest": "^29.5.5",
        "@types/lodash": "^4.14.163",
        "@types/minimist": "^1.2.0",
        "@types/node": "^20",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.51.0",
        "eslint-plugin-jest": "^24.1.0",
        "fs-extra": "^9.0.1",
        "glob": "^7.1.6",
        "husky": "^4.3.0",
        "jest": "^29.7.0",
        "lerna": "^7.4.2",
        "lodash": "^4.17.20",
        "minimist": "^1.2.5",
        "prettier": "^3.0.3",
        "ts-node": "^10.9.1",
        "typedoc": "^0.17.0",
        "typedoc-plugin-lerna-packages": "^0.3.1",
        "typescript": "5.2.2"
    },
    "dependenciesMeta": {
        "@mavrykdynamics/taquito-taquito": {
            "built": false
        }
    },
    "workspaces": [
        "packages/*",
        "integration-tests"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "dependencies": {
        "eslint-plugin-sonarjs": "^0.11.0",
        "yarn": "^1.22.21"
    }
}
