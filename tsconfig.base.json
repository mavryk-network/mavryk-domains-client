{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "types": ["node", "jest"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "baseUrl": "packages",
    "downlevelIteration": true,
    "paths": {
      "@mavrykdynamics/mavryk-domains-core": [
        "core/public_api.ts"
      ],
      "@mavrykdynamics/mavryk-domains-resolver": [
        "resolver/public_api.ts"
      ],
      "@mavrykdynamics/mavryk-domains-manager": [
        "manager/public_api.ts"
      ],
      "@mavrykdynamics/mavryk-domains-taquito-client": [
        "taquito-client/public_api.ts"
      ],
      "@mavrykdynamics/mavryk-domains-conseil-client": [
        "conseil-client/public_api.ts"
      ],
      "@mavrykdynamics/mavryk-domains-taquito": [
        "taquito/public_api.ts"
      ],
    }
  }
}