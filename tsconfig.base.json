{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "baseUrl": "packages",
    "downlevelIteration": true,
    "paths": {
      "@tezos-domains/core": [
        "core/public_api.ts"
      ],
      "@tezos-domains/resolver": [
        "resolver/public_api.ts"
      ]
    }
  }
}